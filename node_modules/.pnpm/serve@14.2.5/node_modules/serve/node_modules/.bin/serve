#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedir=`cygpath -w "$basedir"`
        fi
    ;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/mnt/c/vibecoding/new_project_02/node_modules/.pnpm/serve@14.2.5/node_modules/serve/build/node_modules:/mnt/c/vibecoding/new_project_02/node_modules/.pnpm/serve@14.2.5/node_modules/serve/node_modules:/mnt/c/vibecoding/new_project_02/node_modules/.pnpm/serve@14.2.5/node_modules:/mnt/c/vibecoding/new_project_02/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/mnt/c/vibecoding/new_project_02/node_modules/.pnpm/serve@14.2.5/node_modules/serve/build/node_modules:/mnt/c/vibecoding/new_project_02/node_modules/.pnpm/serve@14.2.5/node_modules/serve/node_modules:/mnt/c/vibecoding/new_project_02/node_modules/.pnpm/serve@14.2.5/node_modules:/mnt/c/vibecoding/new_project_02/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../../build/main.js" "$@"
else
  exec node  "$basedir/../../build/main.js" "$@"
fi
